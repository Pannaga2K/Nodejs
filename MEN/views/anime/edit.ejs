<%- include("../partials/header"); %>
<div class="container">
	<h1 class="text-center">
		ENTER AN ANIME WITH AN IMAGE:
	</h1>
	<div class="box">
		<form class="text-center" action="/anime/<%=anime._id%>?_method=PUT" method="POST">
			<input class="form-control mr-sm-2 temp" type="text" name="anime[name]" value="<%= anime.name %>">
			<input class="form-control mr-sm-2 temp" type="text" name="anime[image]" value="<%= anime.image %>">
			<input class="form-control mr-sm-2 temp" type="number" name="anime[episodes]" value="<%= anime.episodes %>">
			<!-- <input class="btn btn-outline-success sub" type="submit"> -->
			<button class="btn btn-dark">SUBMIT</button>

		</form>
	</div>	
</div>	
<%- include("../partials/footer"); %>