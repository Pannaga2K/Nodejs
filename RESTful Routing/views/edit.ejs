<%- include("partials/header"); %>
<div class="ui main container text segment">
	<div class="ui huge header">AN-I/ME EDIT</div>
	<form class="ui form" action="/anime/<%=anime._id%>?_method=PUT" method="POST">
		<div class="field">
			<label style="color:grey;">TITLE</label>
			<input type="text" name="anime[title]" value="<%= anime.title.toUpperCase() %>">
		</div>
		<div class="field">
			<label style="color:grey;">IMAGE</label>
			<input type="text" name="anime[image]" value="<%= anime.image %>">
		</div>
		<div class="field">
			<label style="color:grey;">EPISODES</label>
			<input type="number" name="anime[episodes]" value="<%= anime.episodes %>">
		</div>
		<div class="field">
			<label style="color:grey;">CHARACTER</label>
			<input type="text" name="anime[character]" value="<%= anime.character %>">
		</div>
		<input class="ui black inverted big button" type="submit" placeholder="SUBMIT">
	</form>
</div>

<%- include("partials/footer"); %>